<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="1" author="yauhen2012@gmail.com">
        <createTable tableName="city_info">
            <column name="city_info_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="city_name" type="varchar(50)">
                <constraints unique="true"/>
            </column>
            <column name="info" type="varchar(200)"/>
        </createTable>
    </changeSet>

    <changeSet id="2" author="yauhen2012@gmail.com">
        <insert tableName="city_info">
            <column name="city_name" value="Minsk"/>
            <column name="info" value="Walking is dangerous for your freedom. Better stay at home and watch TV"/>
        </insert>
    </changeSet>
    <changeSet id="3" author="yauhen2012@gmail.com">
        <insert tableName="city_info">
            <column name="city_name" value="NewYork"/>
            <column name="info" value="The Statue of Liberty is not the most important thing. Take some more money and go to Harlem"/>
        </insert>
    </changeSet>
    <changeSet id="4" author="yauhen2012@gmail.com">
        <insert tableName="city_info">
            <column name="city_name" value="Paris"/>
